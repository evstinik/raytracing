{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug RayTracer",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/raytracer",
      "args": ["${workspaceFolder}/test.ppm"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "type format add --format hex",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build Debug"
    }
  ]
}
